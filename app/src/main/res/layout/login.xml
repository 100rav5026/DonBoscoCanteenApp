<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dbitcanteen"
    tools:context=".LogIn">

    <ImageView
        android:id="@+id/dbit_logo"
        app:srcCompat="@drawable/login_logo"
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:layout_height="220dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/IdField"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_baseline_login_24"
        android:drawableTint="@color/white"
        android:ems="10"
        android:textColor="@color/white"
        android:hint="@string/moodle_id"
        android:textColorHint="@color/white"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/PassField"
        android:textColor="@color/white"
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:drawableTint="@color/white"
        android:backgroundTint="@color/material_on_background_disabled"
        android:hint="@string/moodle_password"
        android:textColorHint="@color/white"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="@string/login" />
</LinearLayout>