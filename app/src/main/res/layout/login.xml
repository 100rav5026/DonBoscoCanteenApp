<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dbitcanteen"
    tools:context=".LogIn">

    <ImageView
        android:id="@+id/dbit_logo"
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:layout_height="220dp"
        android:layout_gravity="center"/>
<!--        app:srcCompat="@drawable/dbitlogo" -->

    <EditText
        android:id="@+id/IdField"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/login"
        android:ems="10"
        android:hint="@string/moodle_id"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/login" />

    <EditText
        android:id="@+id/PassField"
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/password"
        android:background="#ffffff"
        android:hint="@string/moodle_password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/password" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#608F8E8E"
        android:textColor="#FF000000"
        android:text="@string/login" />

</LinearLayout>